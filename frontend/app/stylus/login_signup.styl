#login, #signup
  width 340px
  margin 100px auto 0

  .logo
    margin 20px

  .logo path
    fill #00cc83

  .content
    text-align center

    legend
      font-size 22px
      padding 10px
      width 100%

    input
      display block
      width 100%
      height 56px
      font-size 18px
      margin 20px 0
      border 1px solid #ccc
      border-radius 3px
      text-align center

    input[type=submit]
      background #00cc83
      color white
      text-transform uppercase
      border none

  .sorry-text
    font-size 28px
    padding 30px

  a
    color #00cc83
